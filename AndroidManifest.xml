<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daly.daly.dalyquickview"
    android:versionCode="9"
    android:versionName="1.8" >
    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.VIBRATE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/daly"
        android:theme="@style/AppTheme" >
		
        <activity
            android:name="com.daly.daly.dalyquickview.MainActivity"
            android:label="@string/daly"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.daly.daly.dalyquickview.InfoActivity"
            android:label="@string/daly" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.InfoActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.daly.daly.dalyquickview.ContactActivity"
            android:label="@string/daly" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.ContactActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.daly.daly.dalyquickview.RegActivity"
            android:label="@string/daly"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.RegActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.daly.daly.dalyquickview.TicketsActivity"
            android:label="@string/daly"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.TicketsActivity" />
            </intent-filter>
        </activity>
    </application>
</manifest>
